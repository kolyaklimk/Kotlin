<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14pt</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="Button1" parent="MainButton">
        <item name="android:textColor">#F2DFD1</item>
        <item name="android:backgroundTint">#1F1B18</item>
    </style>

    <style name="Button2" parent="MainButton">
        <item name="android:backgroundTint">#51453A</item>
        <item name="android:textColor">#F2DFD1</item>
    </style>

    <style name="Button3" parent="MainButton">
        <item name="android:backgroundTint">#58422C</item>
        <item name="android:textColor">#FFDCBE</item>
    </style>

    <style name="Button4" parent="MainButton">
        <item name="android:textSize">12pt</item>
        <item name="android:backgroundTint">#151311</item>
        <item name="android:textColor">#FFDCBE</item>
    </style>

    <style name="horizontal_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="ButtonMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">12pt</item>
        <item name="android:backgroundTint">#302B27</item>
    </style>


    <style name="MainEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">32pt</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#E8E1DC</item>
    </style>

    <style name="SecondTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">28pt</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">#CCC5C2</item>
    </style>

</resources>