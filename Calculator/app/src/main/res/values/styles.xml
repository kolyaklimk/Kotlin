<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">@dimen/_3ssp</item>
    </style>

    <style name="Button1" parent="MainButton">
        <item name="android:textColor">@color/Button1_text</item>
        <item name="android:backgroundTint">@color/Button1</item>
    </style>

    <style name="Button2" parent="MainButton">
        <item name="android:backgroundTint">@color/Button2</item>
        <item name="android:textColor">@color/Button2_text</item>
    </style>

    <style name="Button3" parent="MainButton">
        <item name="android:backgroundTint">@color/Button3</item>
        <item name="android:textColor">@color/Button3_text</item>
    </style>

    <style name="Button4" parent="MainButton">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:backgroundTint">@color/Button4</item>
        <item name="android:textColor">@color/Button4_text</item>
    </style>

    <style name="horizontal_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="ButtonMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textColor">@color/ButtonMenu_text</item>
        <item name="android:backgroundTint">@color/ButtonMenu</item>
    </style>


    <style name="MainEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_32ssp</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/MainTextEdit</item>
    </style>

    <style name="SecondTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">@dimen/_26ssp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">@color/SecondTextView</item>
    </style>

    <style name="PopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHeight">wrap_content</item>
        <item name="android:popupBackground">@color/Button2</item>
        <item name="textColorAlertDialogListItem">@color/Button2_text</item>
    </style>

</resources>