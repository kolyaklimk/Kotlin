<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151311"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:background="@drawable/round_backround"
        android:orientation="vertical">

        <Button
            android:id="@+id/b_menu"
            style="@style/ButtonMenu"
            android:text="⋮" />

        <EditText
            android:id="@+id/text_main"
            style="@style/MainEditText" />

        <TextView
            android:id="@+id/text_solve"
            style="@style/SecondTextView"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="0.75"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_all_additionally"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout style="@style/horizontal_linear">

                <Button
                    android:id="@+id/b_ad1"
                    style="@style/Button4"
                    android:text="√" />

                <Button
                    android:id="@+id/b_ad2"
                    style="@style/Button4"
                    android:text="π" />

                <Button
                    android:id="@+id/b_ad3"
                    style="@style/Button4"
                    android:text="^" />

                <Button
                    android:id="@+id/b_ad4"
                    style="@style/Button4"
                    android:text="e" />

                <Button
                    android:id="@+id/b_additionally"
                    style="@style/Button4"
                    android:rotation="180"
                    android:text="^" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_additionally"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout style="@style/horizontal_linear">

                    <Button
                        android:id="@+id/b_INV"
                        style="@style/Button4"
                        android:text="INV" />

                    <Button
                        android:id="@+id/b_ad5"
                        style="@style/Button4"
                        android:text="ln" />

                    <Button
                        android:id="@+id/b_ad6"
                        style="@style/Button4"
                        android:text="log" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    style="@style/horizontal_linear">

                    <Button
                        android:id="@+id/b_ad7"
                        style="@style/Button4"
                        android:text="sin" />

                    <Button
                        android:id="@+id/b_ad8"
                        style="@style/Button4"
                        android:text="cos" />

                    <Button
                        android:id="@+id/b_ad9"
                        style="@style/Button4"
                        android:text="tan" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/horizontal_linear">

            <Button
                android:id="@+id/b_ac"
                style="@style/Button3"
                android:text="AC" />


            <LinearLayout style="@style/horizontal_linear">

                <Button
                    android:id="@+id/b_o_brackets"
                    style="@style/Button2"
                    android:text="(" />

                <Button
                    android:id="@+id/b_c_brackets"
                    style="@style/Button2"
                    android:text=")" />
            </LinearLayout>

            <Button
                android:id="@+id/b_procent"
                style="@style/Button2"
                android:text="%" />

            <Button
                android:id="@+id/b_div"
                style="@style/Button2"
                android:text="/" />
        </LinearLayout>

        <LinearLayout style="@style/horizontal_linear">

            <Button
                android:id="@+id/b_7"
                style="@style/Button1"
                android:text="7" />

            <Button
                android:id="@+id/b_8"
                style="@style/Button1"
                android:text="8" />

            <Button
                android:id="@+id/b_9"
                style="@style/Button1"
                android:text="9" />

            <Button
                android:id="@+id/b_mult"
                style="@style/Button2"
                android:text="*" />
        </LinearLayout>

        <LinearLayout style="@style/horizontal_linear">

            <Button
                android:id="@+id/b_4"
                style="@style/Button1"
                android:text="4" />

            <Button
                android:id="@+id/b_5"
                style="@style/Button1"
                android:text="5" />

            <Button
                android:id="@+id/b_6"
                style="@style/Button1"
                android:text="6" />

            <Button
                android:id="@+id/b_minus"
                style="@style/Button2"
                android:text="-" />
        </LinearLayout>

        <LinearLayout style="@style/horizontal_linear">

            <Button
                android:id="@+id/b_1"
                style="@style/Button1"
                android:text="1" />

            <Button
                android:id="@+id/b_2"
                style="@style/Button1"
                android:text="2" />

            <Button
                android:id="@+id/b_3"
                style="@style/Button1"
                android:text="3" />

            <Button
                android:id="@+id/b_plus"
                style="@style/Button2"
                android:text="+" />
        </LinearLayout>

        <LinearLayout style="@style/horizontal_linear">

            <Button
                android:id="@+id/b_0"
                style="@style/Button1"
                android:text="0" />

            <Button
                android:id="@+id/b_dot"
                style="@style/Button1"
                android:text="." />

            <Button
                android:id="@+id/b_del"
                style="@style/Button1"
                android:text="⌫" />

            <Button
                android:id="@+id/b_solve"
                style="@style/Button3"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>