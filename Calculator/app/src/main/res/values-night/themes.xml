<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!--        <item name="colorPrimary">#FFFFFF</item>-->
        <item name="android:statusBarColor">#302B27</item>

        <item name="android:windowLayoutInDisplayCutoutMode">default</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/TextWindow</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_app</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Calculator</item>
    </style>

    <style name="NoNavBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_alert</item>
    </style>
</resources>